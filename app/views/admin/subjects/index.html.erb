<div class="devise-content">
  <% provide :title, t("admin.subject.allsubject") %>
  <%= link_to t("admin.subject.new"), new_admin_subject_path,
    class: "btn btn-lg btn-primary" %>
  <h1><%= t "admin.subject.allsubject" %></h1>
    <table class="table table-striped">
      <% @subjects.each do |subject| %>
        <tr>
          <td><%= link_to subject.name %></td>
          <td><%= link_to subject.description %></td>
          <td><%= link_to t("admin.subject.edit"), "#",
            class:"btn btn-sm btn-info" %>
          </td>
          <td><%= link_to t("admin.subject.delete"), "#", method: :delete,
            data: {confirm: t("admin.subject.call")}, class: "btn btn-sm btn-danger" %>
          </td>
        </tr>
      <% end %>
    </table>
  <%= paginate @subjects %>
</div>
