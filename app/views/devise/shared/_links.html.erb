<% if controller_name != "sessions" %>
  <%= link_to t("devise.sessions.login"), new_session_path(resource_name) %><br />
<% end %>

<% if devise_mapping.registerable? && controller_name != "registrations" %>
  <%= link_to t("devise.registrations.signup"), new_registration_path(resource_name) %><br />
<% end %>

<% if devise_mapping.recoverable? && controller_name != "passwords" && controller_name != "registrations" %>
  <%= link_to t("devise.passwords.forget"), new_password_path(resource_name) %><br />
<% end %>
