<div class="container">
  <div class="row">
    <table class="table">
      <thead>
        <tr>
          <th><%= t "mailers.exam_name" %></th>
          <th><%= t "mailers.score" %></th>
        </tr>
      </thead>
      <tbody>
        <% @exams.each do |exam| %>
          <tr>
            <td><%= exam.subject.name %></td>
            <td><%= "#{exam.score}/#{exam.question_number}" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
